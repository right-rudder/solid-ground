---
import LogoSolidGroundAviation from "../components/LogoSolidGroundAviation.astro"
export type MenuItem = {
  label: string;
  url: string;
  children?: MenuItem[];
};

export const menu: MenuItem[] = [
  {
    label: "Home",
    url: "#",
    children: [
      { label: "Private Jet Charters", url: "/" },
      { label: "Flight Animation", url: "/homepage-animation" },
    ],
  },
  {
    label: "About Us",
    url: "#",
    children: [
      { label: "Testimonials", url: "/testimonials" },
      { label: "Team", url: "/team" },
      { label: "FAQ", url: "/faq" },
      { label: "404 Page", url: "/404-page" },
    ],
  },
  {
    label: "Products",
    url: "#",
    children: [
      { label: "Shop", url: "/shop" },
      { label: "Cart", url: "/cart" },
      { label: "Checkout", url: "/checkout" },
      { label: "My Account", url: "/my-account" },
    ],
  },
  {
    label: "Contacts",
    url: "/contacts",
  },
];
---

<nav class="navbar">
  <div class="container">
    <!-- Logo -->
    <div class="navbar-logo">
      <a class="logo" href="/" style="background: #333;">
        <LogoSolidGroundAviation />
      </a>
    </div>

    <!-- Menu -->
    <div id="navbar" class="navbar-collapse">
      <ul class="nav navbar-nav">
        {menu.map((item) => (
          <li class={`menu-item ${item.children ? "menu-item-has-children" : ""}`}>
            <a href={item.url}><span>{item.label}</span></a>
            {item.children && (
              <ul class="sub-menu">
                {item.children.map((child) => (
                  <li class="menu-item">
                    <a href={child.url}><span>{child.label}</span></a>
                  </li>
                ))}
              </ul>
            )}
          </li>
        ))}
      </ul>
    </div>

    <!-- Controls -->
    <div class="navbar-controls">
      <button type="button" class="navbar-toggle">
        <span class="icon-bar top-bar"></span>
        <span class="icon-bar middle-bar"></span>
        <span class="icon-bar bottom-bar"></span>
      </button>
    </div>
  </div>
</nav>

<style>
  .navbar {
    position: relative;
    display: flex;
    align-items: center;
    padding: 0.5rem 1rem;
    background: transparent;
    border-bottom: 1px transparent #ddd;
    z-index: 100;
  }

  .container {
    display: flex;
    justify-content: space-between;
    width: 100%;
    align-items: center;
  }

  .navbar-logo img {
    height: 40px;
  }

  .navbar-collapse {
    display: flex;
  }

  .nav {
    list-style: none;
    display: flex;
    gap: 1rem;
    padding: 0;
    padding-y: 0.5rem;
    margin: 0;
  }

  .menu-item {
    position: relative;
    text-decoration: none;
    
  }

  .menu-item-has-children:hover > .sub-menu {
    display: block;
    text-decoration: none;
  }

  .sub-menu {
    display: none;
    position: absolute;
    background: #fff;
    list-style: none;
    padding: 0.5rem 0;
    margin: 0;
    border: 1px solid #ddd;
    z-index: 101;
    text-decoration: none;
  }

  .sub-menu li {
    padding: 0.25rem 1rem;
    text-decoration: none;
  }

  /* Mobile */
  .navbar-toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
  }

  .icon-bar {
    display: block;
    width: 24px;
    height: 2px;
    background: #333;
  }

  @media (max-width: 768px) {
    .navbar-collapse {
      display: none;
      flex-direction: column;
      width: 100%;
      background: #fff;
      padding: 1rem;
    }

    .navbar-collapse.open {
      display: flex;
    }

    .nav {
      flex-direction: column;
      gap: 0.5rem;
    }

    .navbar-toggle {
      display: flex;
    }

    .menu-item-has-children > .sub-menu {
      position: static;
      border: none;
    }
  }
</style>

<script>
  const button = document.querySelector(".navbar-toggle");
  const menu = document.querySelector(".navbar-collapse");

  button?.addEventListener("click", () => {
    menu?.classList.toggle("open");
  });
</script>
