---
// NavbarSolidGroundAviation.astro
import LogoSolidGroundAviation from "../components/LogoSolidGroundAviation.astro";

export type MenuItem = {
  label: string;
  url: string;
  children?: MenuItem[];
};

export type NavbarButton = {
  text: string;
  href: string;
  style: "btn-main" | "btn-second";
};

export const menu: MenuItem[] = [
  {
    label: "Home",
    url: "#",
    children: [
      { label: "Private Jet Charters", url: "/" },
      { label: "Flight Animation", url: "/homepage-animation" },
    ],
  },
  {
    label: "About Us",
    url: "#",
    children: [
      { label: "Testimonials", url: "/testimonials" },
      { label: "Team", url: "/team" },
      { label: "FAQ", url: "/faq" },
      { label: "404 Page", url: "/404-page" },
    ],
  },
  {
    label: "Products",
    url: "#",
    children: [
      { label: "Shop", url: "/shop" },
      { label: "Cart", url: "/cart" },
      { label: "Checkout", url: "/checkout" },
      { label: "My Account", url: "/my-account" },
    ],
  },
];

export const buttons: NavbarButton[] = [
  { text: "Get a Quote", href: "/contact", style: "btn-main" },
];
---

<nav class="navbar">
  <div class="container">
    <!-- Logo -->
    <div class="navbar-logo">
      <a href="/" class="logo">
        <LogoSolidGroundAviation />
      </a>
    </div>

    <!-- Menu -->
    <div id="navbar" class="navbar-collapse">
      <ul class="nav navbar-nav">
        {menu.map((item) => (
          <li class={`menu-item ${item.children ? "menu-item-has-children" : ""}`}>
            <a href={item.url}><span>{item.label}</span></a>
            {item.children && (
              <ul class="sub-menu">
                {item.children.map((child) => (
                  <li class="menu-item">
                    <a href={child.url}><span>{child.label}</span></a>
                  </li>
                ))}
              </ul>
            )}
          </li>
        ))}
      </ul>
    </div>

    <!-- Buttons -->
    <div class="navbar-buttons">
      {buttons.map((button) => (
        <a
          href={button.href}
          class={button.style}
          style="margin-left: 10px;"
        >
          {button.text}
        </a>
      ))}
    </div>

    <!-- Mobile Toggle -->
    <div class="navbar-controls">
      <button type="button" class="navbar-toggle" aria-label="Toggle menu">
        <span class="icon-bar top-bar"></span>
        <span class="icon-bar middle-bar"></span>
        <span class="icon-bar bottom-bar"></span>
      </button>
    </div>
  </div>
</nav>

<style>
  .navbar {
    position: relative;
    display: flex;
    align-items: center;
    padding: 0.5rem 1rem;
    background: transparent;
    z-index: 100;
  }

  .container {
    display: flex;
    justify-content: space-between;
    width: 100%;
    align-items: center;
  }

  .navbar-logo .logo {
    display: flex;
    align-items: center;
  }

  .navbar-collapse {
    display: flex;
    gap: 1rem;
  }

  .nav {
    list-style: none;
    display: flex;
    gap: 1rem;
    padding: 0;
    margin: 0;
  }

  .menu-item {
    position: relative;
  }

  .menu-item-has-children:hover > .sub-menu {
    display: block;
  }

  .sub-menu {
    display: none;
    position: absolute;
    background: #fff;
    list-style: none;
    padding: 0.5rem 0;
    margin: 0;
    border: 1px solid #ddd;
    z-index: 101;
  }

  .sub-menu li {
    padding: 0.25rem 1rem;
  }

  .btn-main {
    background-color: #007ecb;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    text-decoration: none;
  }

  .btn-second {
    background-color: #e06900;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    text-decoration: none;
  }

  .navbar-toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
  }

  .icon-bar {
    width: 24px;
    height: 2px;
    background: #333;
  }

  @media (max-width: 768px) {
    .navbar-collapse {
      display: none;
      flex-direction: column;
      width: 100%;
      background: #fff;
      padding: 1rem;
    }

    .navbar-collapse.open {
      display: flex;
    }

    .nav {
      flex-direction: column;
      gap: 0.5rem;
    }

    .menu-item-has-children > .sub-menu {
      position: static;
      border: none;
    }

    .navbar-toggle {
      display: flex;
    }

    .navbar-buttons {
      display: flex;
      flex-direction: column;
      margin-top: 1rem;
    }

    .navbar-buttons a {
      margin: 0.25rem 0;
    }
  }
</style>

<script type="module">
  const button = document.querySelector(".navbar-toggle");
  const menu = document.querySelector(".navbar-collapse");

  button?.addEventListener("click", () => {
    menu?.classList.toggle("open");
  });
</script>
