---
import ImageComp from "../utils/ImageComp.astro"

const { content } = Astro.props;
---
<section class="bg-gray-900 text-white min-h-screen p-8 ">
    <div class="max-w-5xl mx-auto">
        <div class="md:w-1/2 ">
            <p class="text-sm text-orange-400 mb-2">{content.upperHeading}</p>
            <h2 class="text-3xl font-bold mb-4">{content.title}</h2>
        </div>
        <!-- Hero Section -->
        <div class="flex flex-col lg:flex-row gap-8 mb-16 pb-14 border-b-[1px] border-gray-50/30">
            <!-- Placeholder for form -->
            <div class="flex-1 bg-gray-100 text-gray-900 rounded-3xl p-8 flex items-center justify-center">
                <span class="text-xl font-semibold">Form Placeholder</span>
            </div>

            <!-- Main Card -->
            <div class="w-1/3 relative rounded-3xl overflow-hidden">
                <ImageComp 
                    src="/src/assets/student using simulator 2.jpg"
                    alt=""
                    classes="w-full h-full object-cover absolute inset-0 bg-black/40 z-1"
                />
                <div class="relative bg-black/70 justify-center w-full h-full items-center text-center px-6 py-12 flex flex-col z-30">
                    <h2 class="text-white text-2xl font-bold mb-2" set:html={content.title}></h2>
                    <p class="text-orange-300 text-bold mb-4">{content.description}</p>
                    <div class="flex gap-4"> 
                        {
                            content.buttons && content.buttons.map((button) => ( 
                                <a href={button.href} class="bg-neutral-600 px-6 py-2 rounded-3xl hover:bg-orange-700 transition">{button.text}</a>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Advantages Section -->
        <div class="flex">
            <div class="flex flex-col items-start mb-8 lg:mb-0 lg:mr-16 w-2/5">
                <p class="text-orange-400 mb-4">{content.upperHeading}</p>
                <h3 class="text-xl font-bold mb-4">{content.advantages.title}</h3>
                <p class="text-gray-400 mb-6">
                {content.advantages.description}
                </p>
                <div class="flex items-center gap-4 ">
                {
                    content.buttons && content.buttons.map((button) => ( 
                    <a class={`btn ${button.style} bg-blue-500 rounded-3xl text-white py-2 px-4`} href={button.href}>{button.text} â†’</a>
                    ))
                }
                </div>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            
                {content.advantages.bullets.map((bullet) => ( 
                    <div class="relative rounded-3xl overflow-hidden">
                        <img src="/src/assets/student using simulator 2.jpg" alt="Madrid - Prague" class="w-full h-64 object-cover"/>
                        <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-50 p-4 text-white">
                        <h4 class="font-bold">{bullet.title}</h4>
                        <p>{bullet.description}</p>
                        </div>
                    </div>
                ))}
            
            </div>
        </div>
    </div>
</section>
