---
import ImageComp from "../utils/ImageComp.astro"
import FormEnroll from "../Forms/FormEnroll.astro";

const { content } = Astro.props;
---
<section class="bg-gray-900 text-white min-h-screen p-8 ">
    <div class="max-w-5xl mx-auto">
        <div class="md:w-1/2 ">
            <p class="text-sm text-orange-400 mb-2">{content.upperHeading}</p>
            <h2 class="text-3xl font-bold mb-4">{content.title}</h2>
        </div>
        <!-- Hero Section -->
        <div class="flex flex-col lg:flex-row gap-8 mb-16 pb-14 border-b-[1px] border-gray-50/30">
            <!-- Placeholder for form -->
            <div class="flex-1 bg-gray-100 text-gray-900 rounded-xl p-8 flex items-center justify-center">
                <FormEnroll />
            </div>

            <!-- Main Card -->
            <div class="lg:w-1/3 relative rounded-xl overflow-hidden">
                <ImageComp 
                    src="/src/assets/student using simulator 2.jpg"
                    alt=""
                    classes="w-full h-full object-cover absolute inset-0 bg-black/40 z-1"
                />
                <div class="relative bg-black/70 justify-center w-full h-full items-center text-center px-6 py-12 flex flex-col z-30">
                    <h2 class="text-white text-2xl font-bold mb-2" set:html={content.title}></h2>
                    <p class="text-orange-300 text-bold mb-4">{content.description}</p>
                    <div class="flex gap-4"> 
                        {
                            content.buttons && content.buttons.map((button) => ( 
                                <a href={button.href} class="bg-neutral-600 px-6 py-2 rounded-xl hover:bg-orange-700 transition">{button.text}</a>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Advantages Section -->
        <div class="flex flex-col lg:flex-row">
            <div class="flex flex-col items-center md:items-start text-center mb-8 lg:mb-0 lg:mr-16 w-full md:w-1/2">
                <p class="text-orange-400 mb-4">{content.upperHeading}</p>
                <h3 class="text-xl font-bold mb-4">{content.advantages.title}</h3>
                <p class="text-gray-400 mb-6">
                {content.advantages.description}
                </p>
                <div class="flex items-center gap-4 ">
                {
                    content.buttons && content.buttons.map((button) => ( 
                    <a class={`btn ${button.style} bg-blue-500 rounded-xl text-white py-2 px-4`} href={button.href}>{button.text} â†’</a>
                    ))
                }
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                {content.advantages.bullets.map((bullet) => ( 
                    <div class="group relative rounded-xl overflow-hidden h-full w-full min-h-72 min-w-52 flex flex-col justify-end p-2 hover:pb-6">
                        <ImageComp 
                            src="/src/assets/student using simulator 2.jpg"
                            alt=""
                            classes="absolute inset-0 w-full h-full object-cover transition-transform duration-500 ease-in-out group-hover:scale-105 group-hover:brightness-110"
                        />
                        <div class="relative bg-white/70 backdrop-blur-md p-4text-neutral-900 flex flex-col rounded-xl transition-colors duration-300 ease-in-out">
                            <h4 class="font-bold text-center text-sm text-neutral-900 pt-2">{bullet.title}</h4>
                            <p class="text-sm px-2 pb-2 text-center opacity-0 max-h-0 overflow-hidden transition-all duration-500 ease-in-out group-hover:opacity-100 group-hover:max-h-40 mt-2 text-neutral-900">{bullet.description}</p>
                        </div>
                    </div>
                ))}
            
            </div>
        </div>
    </div>
</section>
