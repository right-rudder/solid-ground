---
const {content} = Astro.props;
---

<!-- Elfsight Google Reviews | Solid Ground Google Reviews -->

<section class="max-w-5xl mx-auto min-h-[400px] py-6 lg:py-12">
    <!-- Text content -->
    <div class="text-center mb-12">
        <p class="text-sm text-orange-400 uppercase font-bold mb-2">{content.upperHeading}</p>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 uppercase" set:html={content.title}></h2>
        <p class="text-gray-500 max-w-2xl mx-auto">
            {content.description}
        </p>
    </div>

    <script src="https://elfsightcdn.com/platform.js" async></script>
    <div class="elfsight-app-7aae1803-ac8a-4f2f-a465-aecbaad27c59" data-elfsight-app-lazy></div>
</section>
