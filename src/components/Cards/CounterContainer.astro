---
import CounterCard from "../Cards/CounterCard.jsx";

const stats = [
  {
    value: 4,
    suffix: "+",
    title: "Simulators",
  },
  {
    value: 15,
    suffix: "+",
    title: "Hours",
  },
  {
    value: 200,
    suffix: "+",
    title: "Simulator Sceneries",
  },
  {
    value: 10,
    suffix: "+",
    title: "Aircraft types",
  },
];

---
<section class="container max-w-5xl mx-auto px-6 py-6 md:py-12">
    <div class="mx-auto max-w-5xl flex flex-col md:flex-row gap-10 flex-wrap justify-center items-center min-h-20">
        {
            stats.map((stat) => (
                <CounterCard
                    client:only="react"
                    value={stat.value}
                    title={stat.title}
                    suffix={stat.suffix}
                />
            ))
        }
    </div>
</section>
